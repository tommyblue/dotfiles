[user]
	name = Tommaso Visconti
	email = tommaso.visconti@gmail.com
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    # pretty logging: full tree
    ll = log --all --graph --abbrev-commit --date=relative
    # pretty logging: only commits leading to HEAD
    lol= log --pretty=oneline --abbrev-commit --graph --decorate
[core]
	excludesfile = $HOME/.gitignore_global
	filemode = false
	editor = /usr/bin/vim
[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[push]
	default = tracking
[url "git@github.com:"]
	insteadOf = https://github.com/
[pager]
    # old behaviour: print branches instead of `less` view
    branch = false
